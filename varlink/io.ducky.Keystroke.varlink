# Keystroke Interface
# 
# A varlink interface for sending keystrokes and key combinations

interface io.ducky.Keystroke

# Send a single keystroke
method SendKey(key: string) -> (success: bool, key: string)

# Send a key combination (multiple keys held together)
# pressed: true = key down, false = key up
method SendKeys(keys: []string, pressed: bool) -> (success: bool, keys: []string, pressed: bool)

# Error returned when the key parameter is invalid
error InvalidKey(message: string)
